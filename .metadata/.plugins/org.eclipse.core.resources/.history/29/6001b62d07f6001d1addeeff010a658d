package com.userservice.dao.impl;

import java.util.List;
import java.util.UUID;

import org.springframework.stereotype.Service;

import com.userservice.dao.UserServiceDao;
import com.userservice.entities.UserEntity;
import com.userservice.exceptions.UserNotFoundException;
import com.userservice.repository.UserRepo;

@Service
public class UserServiceDaoImpl implements UserServiceDao {
	
	private UserRepo uRepo;
	
	@Override
	public UserEntity createUser(UserEntity user) {
		
		user.setUserId(UUID.randomUUID().toString());
		return uRepo.save(user);
	}

	@Override
	public List<UserEntity> getAllUsers() {
		return uRepo.findAll();
	}

	@Override
	public UserEntity getUserById(int id) {
		return uRepo.findById(id).orElseThrow(()-> new UserNotFoundException("user not found : " + id));
	}

	@Override
	public String updateUserById(int id) {
		
		return null;
	}

	@Override
	public String delteUserById(int id) {
		return null;
	}

}
